<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ekskulActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="195dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="188dp"
                        app:sliderAnimationDuration="1200"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="700"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />

                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingviewBehavior">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">

                        <GridLayout
                            android:id="@+id/mainGrid"
                            android:layout_width="match_parent"
                            android:layout_weight="9"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:alignmentMode="alignMargins"
                            android:columnCount="1"
                            android:columnOrderPreserved="false">

                            <!--                            Pembuka Menu 1-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="pramuka">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#FF8C00"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="Pramuka"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/logokemah1" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <!--                        Penutup Menu1-->

                            <!--                            Pembuka Menu 2-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="pmr">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#B22"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="PMR"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/logopmr1" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <!--                        Penutup Menu2-->

                            <!--                            Pembuka Menu 3-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="futsal">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#008000"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="Futsal"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/soccer" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <!--                            Penutup Menu 3-->


                            <!--                            Pembuka Menu 5-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="karate">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#D3D3D3"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="Silat"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/logokarate"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <!--                            Penutup Menu 5-->

                            <!--                            Pembuka Menu 6-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="basket">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#F44336"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="Seni Tari"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/senitari" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    app:cardCornerRadius="15dp"
                                    android:layout_marginTop="20dp"
                                    android:onClick="karate">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#00BCD4"
                                        android:padding="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="Volly"
                                            android:textColor="#fff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="100dp"
                                            android:layout_alignParentRight="true"
                                            android:maxHeight="100dp"
                                            android:src="@drawable/logovoly" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <!--                            Penutup Menu 6-->
                        </GridLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>